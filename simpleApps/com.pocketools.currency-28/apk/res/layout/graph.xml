<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="#ffffffff" android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:admobsdk="http://schemas.android.com/apk/res/com.pocketools.currency">
    <TableLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:stretchColumns="1,2,3" android:shrinkColumns="1,3">
        <TableRow android:background="#ffffffff">
            <TextView android:width="30.0sp" />
            <Spinner android:layout_gravity="center_vertical" android:id="@id/graph_spinner_left" android:prompt="@string/currency_prompt" />
            <TextView android:textSize="26.0sp" android:textColor="#ffffffff" android:layout_gravity="center" android:paddingLeft="10.0sp" android:paddingRight="10.0sp" android:text="Vs" />
            <Spinner android:layout_gravity="center_vertical" android:id="@id/graph_spinner_right" android:prompt="@string/currency_prompt" />
            <TextView android:width="30.0sp" />
        </TableRow>
        <TextView android:height="5.0sp" />
        <TableLayout android:background="#ffffffff" android:layout_span="3">
            <TableRow android:id="@id/graph_timeframeRow">
                <TextView android:textColor="#ff000000" android:id="@id/graph_timeframe_1d" android:paddingLeft="30.0sp" android:paddingRight="10.0sp" android:text="1d" />
                <TextView android:textColor="#ff000000" android:id="@id/graph_timeframe_5d" android:paddingLeft="10.0sp" android:paddingRight="10.0sp" android:text="5d" />
                <TextView android:textColor="#ff000000" android:id="@id/graph_timeframe_3m" android:paddingLeft="10.0sp" android:paddingRight="10.0sp" android:text="3m" />
                <TextView android:textColor="#ff000000" android:id="@id/graph_timeframe_1y" android:paddingLeft="10.0sp" android:paddingRight="10.0sp" android:text="1y" />
                <TextView android:textColor="#ff000000" android:id="@id/graph_timeframe_2y" android:paddingLeft="10.0sp" android:paddingRight="10.0sp" android:text="2y" />
                <TextView android:textColor="#ff000000" android:id="@id/graph_timeframe_5y" android:paddingLeft="10.0sp" android:paddingRight="10.0sp" android:text="5y" />
            </TableRow>
        </TableLayout>
        <ImageButton android:id="@id/graphButton" android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="fitXY" />
    </TableLayout>
</LinearLayout>