<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:admobsdk="http://schemas.android.com/apk/res/com.pocketools.currency">
    <TableLayout android:background="#ffffffff" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_margin="0.0sp" android:stretchColumns="0,2" android:shrinkColumns="*">
        <Gallery android:id="@id/gallery_markets" android:background="#ff000000" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <TableRow> // The main TableRow of the view
		
			//Start of first Section
<TableLayout android:background="@drawable/gradient_reverse" android:padding="5.0sp" android:layout_margin="0.0sp" android:stretchColumns="*" android:shrinkColumns="*">
                <TableRow>
                    <TableLayout android:layout_marginLeft="10.0sp" android:layout_marginTop="10.0sp" android:layout_marginRight="10.0sp">
                        <TableRow>
                            <Spinner android:id="@id/currency_spinner_base" android:layout_width="wrap_content" android:prompt="@string/currency_prompt" />
                        </TableRow>
                        <TextView android:textSize="14.0sp" android:textColor="#ffffffff" android:paddingTop="3.0sp" android:text="Enter Amount" />
                        <TableRow>
                            <EditText android:gravity="left" android:id="@id/currency_left_text" android:text="1" android:cursorVisible="true" android:inputType="phone" />
                        </TableRow>
                    </TableLayout>
                </TableRow>
            </TableLayout>	//End of first Section
			
			//Start of "=" Section
<TableLayout android:background="@drawable/gradient_reverse" android:layout_height="fill_parent">
                <TextView android:height="50.0dip" />
                <ImageView android:layout_gravity="center_vertical" android:id="@id/button_swap_currency" android:layout_width="40.0dip" android:layout_height="40.0dip" android:scaleType="centerInside" />
                <TextView />
            </TableLayout>	//End of "=" Section
			
			
			//Start of thrid Section
<TableLayout android:background="@drawable/gradient_reverse" android:padding="5.0sp" android:layout_margin="0.0sp" android:stretchColumns="*" android:shrinkColumns="*">
                <TableRow>
                    <TableLayout android:layout_marginLeft="10.0sp" android:layout_marginTop="10.0sp" android:layout_marginRight="10.0sp">
                        <TableRow>
                            <Spinner android:id="@id/currency_spinner_new" android:layout_width="wrap_content" android:prompt="@string/currency_prompt" />
                        </TableRow>
                        <TextView android:textSize="14.0sp" android:textColor="#ffffffff" android:paddingTop="3.0sp" android:text="Enter Amount" />
                        <TableRow>
                            <EditText android:gravity="left" android:id="@id/currency_right_text" android:cursorVisible="true" android:inputType="phone" />
                        </TableRow>
                    </TableLayout>
                </TableRow>
            </TableLayout>	//End of Third Section	</TableRow>
        <ImageButton android:id="@id/ad_button_top" android:background="#ffffffff" android:drawSelectorOnTop="false" android:scaleType="fitXY" android:layout_span="3" />
        <TextView android:background="@drawable/gradient_light_reverse" />
        <TableRow>
            <TableLayout android:background="#ffffffff" android:layout_span="3">
                <TableRow android:id="@id/timeframeRowMain" android:layout_span="3" />
            </TableLayout>
        </TableRow>
        <TableRow android:id="@id/graph_animation">
            <TableLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:stretchColumns="0,2" android:layout_span="3">
                <TextView android:height="30.0sp" />
                <TableRow>
                    <TextView android:layout_height="30.0sp" />
                    <ImageView android:layout_gravity="center_vertical" android:id="@id/graph_loading" android:layout_width="40.0dip" android:layout_height="40.0dip" android:scaleType="centerInside" />
                    <TextView />
                </TableRow>
            </TableLayout>
        </TableRow>
        <TableRow android:layout_weight="1.0">
            <TableLayout android:background="#ffffffff" android:layout_span="3">
                <ImageButton android:id="@id/graph_button" android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent" android:drawSelectorOnTop="false" android:scaleType="fitXY" android:layout_span="3" android:layout_weight="1.0" />
            </TableLayout>
        </TableRow> - <TableRow android:id="@id/google_ad_row">
            <LinearLayout android:gravity="center" android:id="@id/admob_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_span="3" />
        </TableRow>
        <TableRow>
            <TableLayout android:background="#ffffffff" android:layout_span="3">
                <TextView android:textSize="12.0sp" android:textColor="#ffffffff" android:gravity="center" android:id="@id/xrate_update_message" android:background="#ff000000" android:paddingLeft="10.0sp" />
            </TableLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>