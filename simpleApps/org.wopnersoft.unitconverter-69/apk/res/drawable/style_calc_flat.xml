<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ffffb516" android:endColor="#fff48e17" android:angle="270.0" />
            <stroke android:width="2.0dip" android:color="#ffc0c3dc" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#ffff8c00" android:endColor="#ffff8c00" android:angle="270.0" />
            <stroke android:width="2.0dip" android:color="#ffdcdcdc" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#ffd4d4d4" />
            <stroke android:width="2.0dip" android:color="#ffdcdcdc" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#ffeaeaf2" android:endColor="#ffe2e2e2" android:angle="270.0" />
            <stroke android:width="2.0dip" android:color="#ffc0c3dc" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
</selector>